<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_adulto_a"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorPrimaryVerdeClaro"
    tools:context=".activity.adulto.AdultoA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/txtTituloFormularioAA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="@string/tituloA"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtQuestaoA1A"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/A1" />

        <RadioGroup
            android:id="@+id/rdgRespA1A"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioButton
                android:id="@+id/rdoNaoA1A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/Nao" />

            <RadioButton
                android:id="@+id/rdoSimA1A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/SimA1" />
        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/NomeProfissional" />

        <EditText
            android:id="@+id/edtRespA1ANomeProfServ"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="text|textCapCharacters|textCapSentences"
            android:textColor="@color/colorPrimaryVerdeEscuro"
            android:textSize="18sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/endereco" />

        <EditText
            android:id="@+id/edtRespA1AEnd"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="text|textCapCharacters|textCapWords|textCapSentences"
            android:textColor="@color/colorPrimaryVerdeEscuro"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtQuestaoA2A"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/A2" />

        <RadioGroup
            android:id="@+id/rdgRespA2A"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioButton
                android:id="@+id/rdoNaoA2A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/NaoA2" />

            <RadioButton
                android:id="@+id/rdoSim1A2A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/SimA21" />

            <RadioButton
                android:id="@+id/rdoSim2A2A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/SimA22" />
        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/NomeProfissional" />

        <EditText
            android:id="@+id/edtRespA2ANomeProfServ"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="text|textCapCharacters|textCapSentences"
            android:textColor="@color/colorPrimaryVerdeEscuro"
            android:textSize="18sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/endereco" />

        <EditText
            android:id="@+id/edtRespA2AEnd"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="text|textCapCharacters|textCapWords|textCapSentences"
            android:textColor="@color/colorPrimaryVerdeEscuro"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtQuestaoA3A"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/A3" />

        <RadioGroup
            android:id="@+id/rdgRespA3A"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioButton
                android:id="@+id/rdoNaoA3A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/NaoA3" />

            <RadioButton
                android:id="@+id/rdoSim1A3A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/SimA31" />

            <RadioButton
                android:id="@+id/rdoSim2A3A"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/SimA32" />

            <RadioButton
                android:id="@+id/rdoSim3A3A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/SimA33" />

            <RadioButton
                android:id="@+id/rdoSim4A3A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/SimA34" />
        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/NomeProfissional" />

        <EditText
            android:id="@+id/edtRespA3ANomeProfServ"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="text|textCapCharacters|textCapWords|textCapSentences"
            android:textColor="@color/colorPrimaryVerdeEscuro"
            android:textSize="18sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/endereco" />

        <EditText
            android:id="@+id/edtRespA3AEnd"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="text|textCapCharacters|textCapSentences"
            android:textColor="@color/colorPrimaryVerdeEscuro"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtDescricao1AA"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingTop="20dp"
            android:text="@string/AText1"
            android:textStyle="bold" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:background="@android:color/darker_gray"></View>

        <Button
            android:id="@+id/btnPreencherAutomaticamente"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Identificar Serviço/Médico/Enfermeiro Automaticamente" />

        <TextView
            android:id="@+id/txtQuestaoA4A"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/A4" />

        <EditText
            android:id="@+id/edtRespA4ANomeMedServUlt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="text|textCapCharacters|textCapWords|textCapSentences"
            android:textColor="@color/colorPrimaryVerdeEscuro"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:text="Esclareça ao entrevistado que:" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="A partir de agora, todas as perguntas seguintes serão sobre o(a):" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/txtQuestaoA5A"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/A5" />

        <EditText
            android:id="@+id/edtRespA5ANomeMedServ"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="text|textCapCharacters|textCapSentences"
            android:textColor="@color/colorPrimaryVerdeEscuro"
            android:textSize="18sp" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fltProximo"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="50dp"
            android:clickable="true"
            app:backgroundTint="@color/colorPrimaryVerdeEscuro"
            app:fabSize="mini"
            app:srcCompat="@drawable/seta_avancar" />

    </LinearLayout>

</ScrollView>
